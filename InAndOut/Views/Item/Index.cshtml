@model IEnumerable<InAndOut.Models.Item>



<div class="container p-3">
  <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Item List</h2>
        </div>
        <div class="col-6 text-right">
             <a class="btn alert-primary" asp-area="" asp-controller="Item" asp-action="Create">Create New Item</a>
        </div>
   </div>
    <br />

    @if(Model.Count() > 0)
    {
       <table class="table table-bordered  table-striped" style="width:100%;">
          <thead>
            <tr>
              <th scope="col">Item Name</th>
              <th scope="col">Borrower</th>
              <th scope="col">Lender</th>
            </tr>
          </thead>
          <tbody>
            @foreach(var item in Model)
            {
               <tr>
                <th width ="30%" scope="row">@item.ItemName</th>
                <td width ="30%">@item.Borrower</td>
                <td width ="30%">@item.Lender</td>
              </tr> 
            }     
          </tbody>
       </table>
    }
 
</div>

