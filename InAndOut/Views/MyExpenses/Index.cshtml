@model IEnumerable<InAndOut.Models.MyExpenses>



<div class="container p-3">
  <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses</h2>
        </div>
        <div class="col-6 text-right">
             <a class="btn btn-primary" asp-area="" asp-controller="MyExpenses" asp-action="Create">Create New Expenses</a>
        </div>
   </div>
   <br />

    @if(Model.Count() > 0)
    {
       <table class="table table-bordered  table-striped" style="width:100%;">
          <thead>
            <tr>
              <th scope="col">My Expenses</th>
              <th scope="col">Amount</th>
              <th scope="col">ExpensesType</th>
              <th scope="col">Changes</th>
            </tr>
          </thead>
          <tbody>
            @foreach(var item in Model)
            {
               <tr>
                <th width ="25%">@item.Expenses</th>
                <td width ="25%">@item.Amount</td>
                <td width ="25%">@item.ExpensesType.Name</td>
                <td width ="25%">
                    <div class="btn-group w-100%" role="group">
                     <a class="btn btn-primary px-3 m-1" asp-area="" asp-controller="MyExpenses" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                     <a class="btn btn-danger px-3 m-1" asp-area="" asp-controller="MyExpenses" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                    </div> 
                </td>
              </tr> 
            }     
          </tbody>
       </table>
    }
 
</div>

