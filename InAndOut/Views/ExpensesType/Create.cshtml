@model InAndOut.Models.ExpensesType

<form method="post" asp-action="Create">
  <div class="border p-3">
    <div class="form-group row">
           <h2 class="text-black-50 pl-3"> Add Expenses Type</h2>
    </div>
    <div class="row">
        <div class="col-12">
          <div class="form-group row">
            <div class="col-6">
              <label asp-for="Name"></label>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-6">
              <input asp-for="Name" class="form-control"/> 
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-8 text-center row offset-2">
              <div class="col">
                <input type="submit" class="btn btn-info w-75" value="Create" />
              </div>
              <div class="col">
                <a class="btn btn-danger w-75" asp-action="Index">Back</a>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/> }
}
