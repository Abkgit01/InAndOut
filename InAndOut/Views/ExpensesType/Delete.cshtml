@model InAndOut.Models.ExpensesType

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
  <div class="border p-3">
    <div class="form-group row">
            <h2 class="text-black-50 pl-3"> Delete Expenses Type</h2>
    </div>
    <div class="row">
        <div class="col-12">
          <div class="form-group row">
            <div class="col-6">
              <label asp-for="Name"></label>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-6">
              <input asp-for="Name" disabled class="form-control"/> 
            </div>
          </div>
          <div class="form-group row">
            <div class="col-8 text-center row offset-2">
              <div class="col">
                <input type="submit" class="btn btn-danger w-75" value="Delete" />
              </div>
              <div class="col">
                <a class="btn btn-success w-75" asp-action="Index">Back</a>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/> }
}
