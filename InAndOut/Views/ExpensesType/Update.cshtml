@model InAndOut.Models.ExpensesType

<form method="post">
    <input asp-for="Id" hidden/>
  <div class="border p-3">
    <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expenses</h2>
    </div>
    <div class="row">
        <div class="col-12">
          <div class="form-group row">
            <div class="col-6">
              <label asp-for="Name"></label>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-6">
              <input asp-for="Name" class="form-control"/> 
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-8 text-center row offset-2">
              <div class="col">
                <input type="submit" class="btn btn-info w-75" value="Update" />
              </div>
              <div class="col">
                <a class="btn btn-primary w-75" asp-action="Index">Back</a>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/> }
}
